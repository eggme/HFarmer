<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutOrder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/darker_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문하기"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            app:contentPadding="5dp"
            android:layout_height="200dp"
            android:layout_below="@+id/layoutOrder">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="175dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/grape" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image1"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="포도가 맛있어"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/tvDeliInfo"
            android:layout_below="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp">
            <TextView

                android:text="배송정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            app:contentPadding="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDeliInfo">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tvDeliInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="받으실분"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/etDeliInfo1"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvDeliInfo1"
                    android:layout_toRightOf="@id/tvDeliInfo6" />

                <TextView
                    android:id="@+id/tvDeliInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우편번호"
                    android:layout_below="@+id/tvDeliInfo1"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/etDeliInfo2"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvDeliInfo2"
                    android:layout_toRightOf="@id/tvDeliInfo6"/>

                <TextView
                    android:id="@+id/tvDeliInfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:layout_below="@+id/tvDeliInfo2"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/etDeliInfo3"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvDeliInfo3"
                    android:layout_toRightOf="@id/tvDeliInfo6" />

                <TextView
                    android:id="@+id/tvDeliInfo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴대폰"
                    android:layout_below="@+id/tvDeliInfo3"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/etDeliInfo4"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvDeliInfo4"
                    android:layout_toRightOf="@id/tvDeliInfo6" />

                <TextView
                    android:id="@+id/tvDeliInfo5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴대폰"
                    android:layout_below="@+id/tvDeliInfo4"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/etDeliInfo5"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvDeliInfo5"
                    android:layout_toRightOf="@id/tvDeliInfo6" />

                <TextView
                    android:id="@+id/tvDeliInfo6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주문메시지"
                    android:layout_below="@+id/tvDeliInfo5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="25dp"/>

                <EditText
                    android:id="@+id/etDeliInfo6"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvDeliInfo6"
                    android:layout_toRightOf="@id/tvDeliInfo6" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/tvPayInfo"
            android:layout_below="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp">

            <TextView
                android:text="결제정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="match_parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            app:contentPadding="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPayInfo">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tvPayInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품금액"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/etPayInfo1"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvPayInfo1"
                    android:layout_toRightOf="@id/tvPayInfo5"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:text="25,000원" />

                <TextView
                    android:id="@+id/tvPayInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배송비"
                    android:layout_below="@+id/tvPayInfo1"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/etPayInfo2"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvPayInfo2"
                    android:layout_toRightOf="@id/tvPayInfo5"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:text="3,000원" />

                <TextView
                    android:id="@+id/tvPayInfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="할인금액"
                    android:layout_below="@+id/tvPayInfo2"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/etPayInfo3"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvPayInfo3"
                    android:layout_toRightOf="@id/tvPayInfo5"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:text="0원" />

                <TextView
                    android:id="@+id/tvPayInfo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가금액"
                    android:layout_below="@+id/tvPayInfo3"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/etPayInfo4"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvPayInfo4"
                    android:layout_toRightOf="@id/tvPayInfo5"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:text="0원" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#f00"
                    android:layout_below="@id/tvPayInfo4"/>

                <TextView
                    android:id="@+id/tvPayInfo5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 예정금액"
                    android:layout_below="@+id/tvPayInfo4"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/etPayInfo5"
                    android:layout_width="272dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/tvPayInfo5"
                    android:layout_toRightOf="@id/tvPayInfo5"
                    android:text="25,000원"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:textColor="#f00"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/order_btnOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제하기"
            android:layout_below="@id/cv3" />

    </RelativeLayout>

</ScrollView>